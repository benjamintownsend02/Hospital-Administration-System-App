<table class="table">
  <thead class="thead-dark" id="patientDb">
    <tr>
      <th>Patient ID</th>
      <th>Patient Name</th>
      <th>Patient DoctorID</th>
      <th>Medical History</th>
      <th>Edit Button</th>
    </tr>
    {{#each patients}}
    <tr>
      <td>{{this.dataValues.id}}</td>
      <td>{{this.dataValues.name}}</td>
      <td>{{this.dataValues.DoctorId}}</td>
      <td>{{this.dataValues.medicalHistory}}</td>
      <td><button data-patientid="{{this.dataValues.id}}" class="edit-patient">Edit Records</button></td>
    </tr>
    {{/each}}
  </thead>

</table>
